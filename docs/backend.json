{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile in the TechPath Weaver application.",
      "properties": {
        "authId": {
          "type": "string",
          "description": "Identifier from the external authentication provider (e.g., Google, Telegram)."
        },
        "name": {
          "type": "string",
          "description": "User's full name."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "description": "User's role.",
          "enum": ["usuaria", "mentora", "admin"]
        },
        "skills": {
          "type": "array",
          "description": "List of user's skills.",
          "items": {
            "type": "string"
          }
        },
        "experience": {
          "type": "string",
          "description": "User's work experience description."
        },
        "interests": {
          "type": "array",
          "description": "List of user's interests.",
          "items": {
            "type": "string"
          }
        },
        "goals": {
          "type": "string",
          "description": "User's career goals."
        }
      },
      "required": [
        "authId",
        "name",
        "email",
        "role"
      ]
    },
    "CareerPath": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CareerPath",
      "type": "object",
      "description": "Represents a recommended career path for a user.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the career path (e.g., Data Scientist, Web Developer)."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the career path."
        },
        "requiredSkills": {
          "type": "array",
          "description": "List of skills required for this career path.",
          "items": {
            "type": "string"
          }
        },
        "recommendedCourses": {
          "type": "array",
          "description": "List of courses recommended for this career path.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "description",
        "requiredSkills",
        "recommendedCourses"
      ]
    },
    "Course": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Course",
      "type": "object",
      "description": "Represents a course recommended for skill development.",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the course."
        },
        "description": {
          "type": "string",
          "description": "Description of the course content."
        },
        "provider": {
          "type": "string",
          "description": "Provider of the course (e.g., Coursera, Udemy)."
        },
        "url": {
          "type": "string",
          "description": "URL of the course.",
          "format": "uri"
        }
      },
      "required": [
        "title",
        "description",
        "provider",
        "url"
      ]
    },
    "Mentorship": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Mentorship",
      "type": "object",
      "description": "Represents a mentorship connection between a user and a mentor.",
      "properties": {
        "mentorId": {
          "type": "string",
          "description": "Reference to the mentor's UserProfile."
        },
        "menteeId": {
          "type": "string",
          "description": "Reference to the mentee's UserProfile."
        },
        "startDate": {
          "type": "string",
          "description": "Start date of the mentorship.",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "description": "End date of the mentorship (if applicable).",
          "format": "date-time"
        },
        "goals": {
          "type": "string",
          "description": "Description of the goals of the mentorship."
        },
        "status": {
          "type": "string",
          "enum": ["requested", "active", "completed", "cancelled"]
        }
      },
      "required": [
        "mentorId",
        "menteeId",
        "startDate",
        "goals",
        "status"
      ]
    },
     "UserSession": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserSession",
      "type": "object",
      "description": "Represents a user's interaction session with the bot or app.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user."
        },
        "startTime": {
          "type": "string",
          "format": "date-time"
        },
        "endTime": {
          "type": "string",
          "format": "date-time"
        },
        "platform": {
          "type": "string",
          "enum": ["web", "telegram"]
        },
        "interactions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["userId", "startTime", "platform"]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "Stores user profile data. The document ID is the user's Firebase Auth UID."
    },
    "/mentors/{mentorId}": {
        "schema": "UserProfile",
        "description": "Public profiles for mentors. Subset of UserProfile, contains specialty, availability etc."
    },
    "/career_paths/{careerPathId}": {
      "schema": "CareerPath",
      "description": "Stores suggested career paths based on market analysis."
    },
    "/sessions/{sessionId}": {
      "schema": "UserSession",
      "description": "Collection to store user interaction history."
    },
    "/mentorships/{mentorshipId}": {
      "schema": "Mentorship",
      "description": "Stores mentorship connection information."
    }
  }
}